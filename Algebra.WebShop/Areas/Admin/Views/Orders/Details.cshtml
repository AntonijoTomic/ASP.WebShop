@model Algebra.WebShop.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.LastName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CustomerEmailAdress)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CustomerAdress)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.FirstName)</td>
                <td>@Html.DisplayFor(model => model.LastName)</td>
                <td>@Html.DisplayFor(model => model.CustomerEmailAdress)</td>
                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                <td>@Html.DisplayFor(model => model.CustomerAdress)</td>
            </tr>
        </tbody>
    </table>

    <dl class="row">
        <dt class="col-sm-2">
            Ime i prezime kupca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTimeCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total) €
        </dd>
    </dl>
    <partial name="_OrderItemsPartial" for="@Model.Items" />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
