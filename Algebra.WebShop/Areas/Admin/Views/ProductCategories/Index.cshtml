@model IEnumerable<Algebra.WebShop.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>ProductCategories</h1>

<p>
    <a asp-action="Create" asp-route-productId="@ViewBag.ProductId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-productId="@ViewBag.ProductId"  asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-productId="@ViewBag.ProductId" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-productId="@ViewBag.ProductId" asp-route-id="@item.Id">Delete</a> |
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Products" asp-action="Index" > Back to products</a>